<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="BarWho" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Hier soll immer CurrentImage geladen werden-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Image/>
        </Grid>

        <!--Warenkorb-->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid Margin="25,25,25,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock FontSize ="23" Text="Shopping Basket" Grid.Row="0" FontWeight="Bold"/>

                <ListView Grid.Row="1" x:Name="ShoppingBasketViewList" BorderThickness = "1"
                          SelectionChanged="ShoppingBasketViewList_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn DisplayMemberBinding="{Binding}" Header="quantity" Width="50"/>
                            <GridViewColumn DisplayMemberBinding="{Binding}" Header = "product" Width="240"/>
                            <GridViewColumn DisplayMemberBinding="{Binding}" Header = "price" Width="60"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

        </Grid>

        <!--Sonstige Funktionen-->
        <Grid Grid.Row="1" Grid.Column="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button FontSize="15" Content="search manually" Name="searchManuallyButton" Grid.Column="0" FontWeight="Heavy"/>
            <Button FontSize="23" Content="pay" Name="payButton" Grid.Column="1" FontWeight="Heavy"/>
            <Button FontSize="12" Content="edit line of goods" Name="editLineOfGoodsButton" Grid.Column="2" FontWeight="Heavy"/>
        </Grid>

        <!--Warenkorb bearbeiten und Preis-->

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button FontSize="80" Content="-" Name="minusButton" Grid.Column="0"/>
            <Button FontSize="80" Content="+" Name="plusButton" Grid.Column="1"/>
            <TextBlock Text="PREIS" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="33" FontWeight="Bold" />

        </Grid>
    </Grid>
</Window>


