<Application x:Class="GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI"
             xmlns:viewModel="clr-namespace:GUI.MVVM.ViewModel"
             xmlns:view="clr-namespace:GUI.MVVM.View"
             >
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModel:MainVM}">
            <view:MainWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:AddManuallyVM}">
            <view:addManuallyWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:EditProductInLineOfGoodsVM}">
            <view:editProductInLineOfGoodsWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:AddProductToLineOfGoodsVM}">
            <view:addProductToLineOfGoodsWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:SearchProductInLineOfGoodsVM}">
            <view:searchProductInLineOfGoodsWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=viewModel:PayVM}">
            <view:PayWindow/>
        </DataTemplate>

    </Application.Resources>
</Application>
